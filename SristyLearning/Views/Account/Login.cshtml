@model LoginViewModel

<!-- ======= Contact Section ======= -->
<section class="contact">
    <div class="container">

        <div class="section-title mt-5">
            <span>Login</span>
            <h2>Login</h2>
            <p>If you have an account, Please! login.</p>
        </div>
        <div class="col-lg-5 mt-5 mt-lg-0 m-auto">
            <form method="post" role="form" class="php-email-form" asp-controller="Account" asp-action="ValidateLogin" novalidate>
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group mt-3">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" asp-for="Email">
                </div>

                <div class="form-group mt-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" asp-for="Password">
                </div>

                <div class="text-center mt-3"><button type="submit">LogIn</button></div>

                <p class="text-center mt-md-4">Don't have an account? <a class="text-primary" asp-controller="Account" asp-action="Register">Register</a></p>
            </form>
        </div>

    </div>


</section><!-- End Contact Section -->