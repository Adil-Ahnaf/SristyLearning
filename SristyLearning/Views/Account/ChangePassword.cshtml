@model ChangePasswordViewModel


<section class="mt-5">
    <div class="bg-body border p-5">
        <h3>Change Password</h3><hr />
        <div class="col-lg-5 mt-5 mt-lg-0 m-auto">
            <form method="post" role="form" class="php-email-form" asp-controller="Account" asp-action="ChangePasswordSubmit" novalidate>
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group mt-3">
                    <label asp-for="OldPassword"></label>
                    <input type="password" class="form-control" asp-for="OldPassword">
                    <span class="text-danger" asp-validation-for="OldPassword"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="NewPassword"></label>
                    <input type="password" class="form-control" asp-for="NewPassword">
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>

                <div class="text-center mt-3"><button type="submit" class="btn btn-primary rounded">Change Password</button></div>
            </form>
        </div>
    </div>
</section>




