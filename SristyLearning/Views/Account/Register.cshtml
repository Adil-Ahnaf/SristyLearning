@model RegisterViewModel

<!-- ======= Contact Section ======= -->
<section class="contact">
    <div class="container">

        <div class="section-title mt-5">
            <span>Register</span>
            <h2>Register</h2>
            <p>If you new in our website, Please! register.</p>
        </div>
        <div class="col-lg-5 mt-5 mt-lg-0 m-auto">
            <form class="php-email-form" method="post" asp-controller="Account" asp-action="SuccessfullyRegister" novalidate="novalidate">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group mt-3">
                    <label for="Name">User Name</label>
                    <input type="text" class="form-control" asp-for="Name">
                    @*<span asp-validation-for="Name" class="text-danger m-sm-1"></span>*@
                </div>

                <div class="form-group mt-3">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email">
                    @*<span asp-validation-for="Email" class="text-danger m-sm-1"></span>*@
                </div>

                <!--<div class="form-group mt-3">
                    <label for="Address">Address</label>
                    <input type="text" class="form-control" asp-for="Address">-->
                    @*<span asp-validation-for="Address" class="text-danger m-sm-1"></span>*@
                <!--</div>-->

                <div class="form-group mt-3">
                    <label for="Phone">Phone Number</label>
                    <input type="number" class="form-control" asp-for="Phone">
                    @*<span asp-validation-for="Phone" class="text-danger m-sm-1"></span>*@
                </div>

                <div class="form-group mt-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" asp-for="Password">
                    @*<span asp-validation-for="Password" class="text-danger m-sm-1"></span>*@
                </div>

                <div class="text-center mt-3"><button type="submit">Register</button></div>
                <p class="text-center mt-md-4">Already have an account? <a class="text-primary" asp-controller="Account" asp-action="LogIn">LogIn</a></p>
            </form>
            
        </div>

    </div>


</section><!-- End Contact Section -->