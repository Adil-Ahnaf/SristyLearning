@model ExamResultViewModel

<section class="mt-5">
    <div class="bg-body border p-5">
        <h3>Your Exam Results</h3><hr />

        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-success">
                    <th scope="col">Exam Title</th>
                    <th scope="col">Total Question</th>
                    <th scope="col">Answered</th>
                    <th scope="col">Not Answered</th>
                    <th scope="col">Total Mark</th>
                    <th scope="col">Get Mark</th>
                    <th scope="col">Result Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.AllResult.Count; i++)
                {
                    <tr>
                        <td>@Model.AllResult[i].Title</td>
                        <td>@Model.AllResult[i].TotalQuestion</td>
                        <td>@Model.AllResult[i].Answered</td>
                        <td>@Model.AllResult[i].NotAnswered</td>
                        <td>@Model.AllResult[i].TotalMark</td>
                        <td>@Model.AllResult[i].GetMark</td>
                        <td>@Model.AllResult[i].Result</td>
                        <td>
                            <a class="btn btn-sm btn-success" asp-controller="Exam" asp-action="DetailedResult" asp-route-examId="@Model.AllResult[i].Id">View Details</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>




