@model ExamListViewModel

<section class="mt-5">
    <div class="bg-body border p-5">
        <h3>Avaliable Exam List</h3><hr />

        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-success">
                    <th scope="col">Id</th>
                    <th scope="col">Exam Title</th>
                    <th scope="col">Total Question</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Pass Mark(%)</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.AllExam.Count; i++)
                {
                    <tr>
                        <td>@Model.AllExam[i].Id</td>
                        <td>@Model.AllExam[i].Title</td>
                        <td>@Model.AllExam[i].TotalQuestion</td>
                        <td>@Model.AllExam[i].Duration</td>
                        <td>@Model.AllExam[i].PassMarkPercent</td>
                        <td>
                            <a class="btn btn-sm btn-success" asp-controller="Exam" asp-action="ExamInProcessing" 
                               asp-route-examTime="@Model.AllExam[i].Duration" asp-route-examId="@Model.AllExam[i].Id">Start Exam</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>




